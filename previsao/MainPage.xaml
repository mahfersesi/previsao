<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="previsao.MainPage"
             Shell.NavBarIsVisible="false">

    <Grid>

    <Grid.RowDefinitions>
    <RowDefinition Height="*"/>
    <RowDefinition Height="*"/>
    <RowDefinition Height="*"/>
    <RowDefinition Height="*"/>
    <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

        <Image Source="previsaotempo.jpg"
            Aspect="AspectFill"
            Grid.RowSpan="5"
            Grid.ColumnSpan="3"/>

        <Label Text="Previsao do tempo"
           TextColor="#ffff00"
           Grid.Row="2"
           Margin="40"
           HorizontalOptions="FillAndExpand"
           FontSize="35"
           FontFamily="CachetStdBold"
           VerticalOptions="Center"/>

        <Button x:Name="Promx"
              Text="Ver previsão"
              Clicked="Pr"
              Grid.Row="4"
              HeightRequest="50"
              CornerRadius="25"
              BackgroundColor="#1414b8"
              TextColor="White"
              FontSize="18"
              FontFamily="CachetStdBold"
              HorizontalOptions="FillAndExpand"
              VerticalOptions="Center"/>






    </Grid>
</ContentPage>
